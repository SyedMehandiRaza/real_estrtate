  <!-- WHITE CARD -->
  <section class="content-area">
    <div class="card">
      <h2 class="card-title">Document</h2>

      <form action="/add_prop_submit">
        <div class="document-grid">
          <!-- RERA Certificate -->
          <div class="document-section">
            <div class="section-label">RERA Certificate</div>
            <div
              class="upload-box"
              onclick="document.getElementById('reraInput').click()"
            >
              <div class="upload-text">Drag & drop OR click to browse</div>
              <div class="upload-subtext">
                Supported formats: PDF, JPG, PNG<br />
                Max size: 10 MB
              </div>
            </div>
            <input
              type="file"
              id="reraInput"
              accept=".pdf,.jpg,.jpeg,.png"
              style="display: none"
            />

            <div class="uploaded-file">
              <div class="file-icon"></div>
              <div class="file-info">
                <div class="file-name">Rera_Certificate.pdf</div>
                <div class="file-size">Size: 4.54 mb</div>
              </div>
              <button class="remove-file-btn">√ó</button>
            </div>
          </div>

          <!-- Floor Plan -->
          <div class="document-section">
            <div class="section-label">Floor Plan</div>
            <div
              class="upload-box"
              onclick="document.getElementById('floorPlanInput').click()"
            >
              <div class="upload-text">Drag & drop OR click to browse</div>
              <div class="upload-subtext">
                Supported formats: mp4<br />
                Max size: 40 MB
              </div>
            </div>
            <input
              type="file"
              id="floorPlanInput"
              accept=".pdf,.jpg,.jpeg,.png"
              style="display: none"
            />
          </div>

          <!-- Legal NOC -->
          <div class="document-section">
            <div class="section-label">Legal NOC</div>
            <div
              class="upload-box"
              onclick="document.getElementById('legalNocInput').click()"
            >
              <div class="upload-text">Drag & drop OR click to browse</div>
              <div class="upload-subtext">
                Supported formats: PDF, JPG, PNG<br />
                Max size: 10 MB
              </div>
            </div>
            <input
              type="file"
              id="legalNocInput"
              accept=".pdf,.jpg,.jpeg,.png"
              style="display: none"
            />
          </div>

          <!-- Ownership Proof -->
          <div class="document-section">
            <div class="section-label">Ownership Proof</div>
            <div
              class="upload-box"
              onclick="document.getElementById('ownershipInput').click()"
            >
              <div class="upload-text">Drag & drop OR click to browse</div>
              <div class="upload-subtext">
                Supported formats: mp4<br />
                Max size: 40 MB
              </div>
            </div>
            <input
              type="file"
              id="ownershipInput"
              accept=".pdf,.jpg,.jpeg,.png"
              style="display: none"
            />
          </div>

          <!-- Other (optional) -->
          <div class="document-section full-width">
            <div class="section-label">Other (optional)</div>
            <div
              class="upload-box"
              onclick="document.getElementById('otherInput').click()"
            >
              <div class="upload-text">Drag & drop OR click to browse</div>
              <div class="upload-subtext">
                Supported formats: PDF, JPG, PNG<br />
                Max size: 10 MB
              </div>
            </div>
            <input
              type="file"
              id="otherInput"
              accept=".pdf,.jpg,.jpeg,.png"
              style="display: none"
            />
          </div>
        </div>

        <!-- Actions -->
        <div class="actions">
          <button class="btn btn-back">‚Üê Back</button>
          <button class="btn btn-next" type="submit">Next ‚Üí</button>
        </div>
      </form>
    </div>
