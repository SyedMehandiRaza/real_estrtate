  <!-- promotion status table -->
  <div class="card status-card">
    <div class="table-title">Promotion Status</div>
    <table class="status-table">
      <thead>
        <tr>
          <th>Property Name</th>
          <th>Promotion Status</th>
          <th>Date of Posting</th>
          <th>Platform Posted On</th>
          <th>Platform</th>
        </tr>
      </thead>
      <tbody>
        <% promotionStatus.forEach(status => { %>
        <tr>
          <td><%= status.propertyName %></td>
          <td>
            <span
              class="status-pill <%= status.status === 'Promoted' ? 'status-promoted' : (status.status === 'In Progress' ? 'status-progress' : 'status-not') %>"
            >
              <%= status.status %>
            </span>
          </td>
          <td><%= status.dateOfPosting %></td>
          <td><%= status.platformPostedOn %></td>
          <td><%= status.platform %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
