      <div class="post-list">
        <% posts.forEach(post => { %>

        <!-- IMAGE POST -->
        <% if(post.type === 'image') { %>
        <article class="post-card">
          <div
            class="post-img"
            style="background-image: url('<%= post.url %>')"
          ></div>
          <div class="post-body">
            <div class="post-title"><%= post.title %></div>
            <div class="post-meta">
              <span><%= post.location %></span>
            </div>
            <div class="post-price">
              <%= post.price ? '$' + post.price : '-' %>
            </div>
          </div>
        </article>
        <% } %>

        <!-- CAROUSEL POST -->
        <% if(post.type === 'carousel') { %>
        <article class="post-card">
          <div class="post-media-wrap carousel" data-index="0">
            <% post.urls.forEach((img, idx) => { %>
            <div
              class="post-img"
              style="background-image:url('<%= img %>'); display: <%= idx === 0 ? 'block' : 'none' %>;"
            ></div>
            <% }) %>
            <div class="carousel-dots">
              <% post.urls.forEach((_, idx) => { %>
              <span class="dot <%= idx === 0 ? 'active' : '' %>"></span>
              <% }) %>
            </div>
          </div>
          <div class="post-body">
            <div class="post-title"><%= post.title %></div>
            <div class="post-meta"><span><%= post.location %></span></div>
            <div class="post-price">
              <%= post.price ? '$' + post.price : '-' %>
            </div>
          </div>
        </article>
        <% } %>

        <!-- VIDEO POST -->
        <% if(post.type === 'video') { %>
        <article class="post-card">
          <div class="post-media-wrap">
            <div
              class="post-img"
              style="background-image: url('<%= post.url %>')"
            ></div>
